{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Snapshot",
			"type": "shell",
			"command": "goreleaser build --rm-dist --snapshot --config=build/.goreleaser.yaml",
			"problemMatcher": "$go"
		},
		{
			"label": "Build version",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-o='app.exe'",
				"-tags=hints",
				"--ldflags='-X github.com/stnokott/r6-dissect-influx/internal/constants.Version=${input:version} -X github.com/stnokott/r6-dissect-influx/internal/constants.Commit=123456a -X github.com/stnokott/r6-dissect-influx/internal/constants.ProjectName=${workspaceFolderBasename}'",
				"./cmd/app"
			],
			"problemMatcher": "$go"
		}
	],
	"inputs": [
		{
			"id": "version",
			"default": "0.0.1",
			"description": "Version to embed in binary",
			"type": "promptString",
		}
	]
}
